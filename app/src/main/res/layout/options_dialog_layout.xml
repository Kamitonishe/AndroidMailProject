<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.AlertDialogLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    style="@style/CustomDialogTheme">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Picture: "
            android:textColor="@color/ping"
            android:textSize="15sp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/picture_spinner"
            android:layout_width="fill_parent"
            android:popupBackground="@android:color/holo_blue_dark"
            android:layout_height="50dp"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textColor="@color/ping"
            android:textSize="15sp"
            android:text="Only favorites"
            android:gravity="center"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/onlyFavoritesCB"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textColor="@color/ping"
            android:textSize="15sp"
            android:text="Compare only to favorites"
            android:gravity="center"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compareOnlyToFavoritesCB"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Notifications frequency: "
            android:textColor="@color/ping"
            android:textSize="15sp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/notifications_spinner"
            android:layout_width="fill_parent"
            android:popupBackground="@android:color/holo_blue_dark"
            android:layout_height="50dp"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:background="@android:color/holo_blue_dark"
        android:text="Wipe data"
        android:id="@+id/wipeButton"/>
</android.support.v7.widget.AlertDialogLayout>