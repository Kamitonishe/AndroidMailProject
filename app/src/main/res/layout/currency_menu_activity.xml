<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/textView"
        android:background="@drawable/button_default_selector"
        android:onClick="toggleContents"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:id="@+id/textViewHelp"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryDark"
        />
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/fragmentsFrame"
        android:background="@drawable/color_gray">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="0dp"
            android:clickable="false"
            android:background="@color/compoundBroun"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ru.mail.android.androidmailproject.auxiliary.CustomRecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/recycler1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:clipToPadding="false"
                android:padding="8dp"
                android:background="@drawable/color_gray">

            </ru.mail.android.androidmailproject.auxiliary.CustomRecyclerView>
        </FrameLayout>
    </LinearLayout>

    </LinearLayout>